<div class="main font-sans min-h-screen antialiased bg-gray-900 pt-24 pb-5" style="background: #4f46e5;">
   <div class="flex flex-col justify-center sm:w-96 sm:m-auto mx-5 mb-5 space-y-8">
      <%= render "clients/shared/error_messages", resource: resource %>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.label :password, "New password" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
  <%= f.hidden_field :reset_password_token %>
       <div class="flex flex-col bg-white p-10 rounded-lg shadow space-y-6">
         <h1 class="font-bold text-xl text-center text-blue-500">Change your password</h1>

         <div class="flex flex-col space-y-1">
           <%= f.label :password_confirmation, "Confirm new password" %>
           <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class:"border-2 rounded px-3 py-2 w-full focus:outline-none focus:border-blue-400 focus:shadow", placeholder:"Username" %>
         </div>
         <div class="flex flex-col space-y-1">
           <%= f.label :password_confirmation, "Confirm new password" %>
           <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"border-2 rounded px-3 py-2 w-full focus:outline-none focus:border-blue-400 focus:shadow", placeholder:"Username" %>
         </div>
         <div class="flex flex-col-reverse sm:flex-row sm:justify-between items-center">
           <%= f.submit "Change my password" ,class:"bg-blue-500 text-white font-bold px-5 py-2 rounded focus:outline-none shadow hover:bg-blue-700 transition-colors" %>
         </div>
           <%= render "clients/shared/links" ,class:"inline-block text-blue-500 hover:text-blue-800 hover:underline"%>
       </div>
      <% end %>
     <div class="flex justify-center text-gray-500 text-sm">
       <p>&copy;2021. All right reserved.</p>
     </div>
   </div>
 </div>
