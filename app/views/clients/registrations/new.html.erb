<section class=" py-1 bg-blueGray-50">
<div class="w-full lg:w-8/12 px-4 mx-auto mt-6">
  <div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-blueGray-100 border-0">
    <div class="rounded-t bg-white mb-0 px-6 py-6">
      <div class="text-center flex justify-between">
        <h6 class="text-blueGray-700 text-xl font-bold">
          Create business account
        </h6>

      </div>
    </div>
    <div class="flex-auto px-4 lg:px-10 py-10 pt-0">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
       <%= render "devise/shared/error_messages", resource: resource %>
        <div class="flex flex-wrap">
          <div class="w-full lg:w-6/12 px-4">
            <div class="relative w-full mb-3">
              <%= f.hidden_field :role, value:1 %>
               <%= f.label :first_name,class:"block uppercase text-blueGray-600 text-xs font-bold mb-2" %>
               <%= f.text_field :fname,class:"border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" %>
            </div>
          </div>
          <div class="w-full lg:w-6/12 px-4">
            <div class="relative w-full mb-3">
               <%= f.label :last_name,class:"block uppercase text-blueGray-600 text-xs font-bold mb-2" %>
               <%= f.text_field :lname,class:"border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" %>
            </div>
          </div>
          <div class="w-full lg:w-6/12 px-4">
            <div class="relative w-full mb-3">
               <%= f.label :email,class:"block uppercase text-blueGray-600 text-xs font-bold mb-2" %>
               <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600            bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" %>
            </div>
          </div>

          <div class="w-full lg:w-6/12 px-4">
          <div class="relative w-full mb-3">
            <%= f.label :password, class:"block uppercase text-blueGray-600 text-xs font-bold mb-2" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password",class:"border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600            bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" %>
              </div>
          </div>
          <div class="w-full lg:w-6/12 px-4">
            <div class="relative w-full mb-3">
              <%= f.label :password_confirmation ,class:"block uppercase text-blueGray-600 text-xs font-bold mb-2" %>
               <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" %>
            </div>
          </div>
          <div class="w-full lg:w-6/12 px-4">
            <div class="relative w-full mb-3">
               <%= f.label :phone,class:"block uppercase text-blueGray-600 text-xs font-bold mb-2" %>
               <%= f.number_field :phone,class:"border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" %>
            </div>
          </div>
          <div class="w-full lg:w-6/12 px-4">
            <div class="relative w-full mb-3">
               <%= f.label "Company Logo",class:"block uppercase text-blueGray-600 text-xs font-bold mb-2" %>
               <%= f.file_field :image,class:"border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" %>

            </div>
          </div>
          <div class="w-full lg:w-6/12 px-4">
            <div class="relative w-full mb-3">
               <%= f.label "Company Name",class:"block uppercase text-blueGray-600 text-xs font-bold mb-2" %>
               <%= f.text_field :companyname,class:"border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" %>
            </div>
          </div>
        </div>

        <hr class="mt-6 border-b-1 border-blueGray-300">

        <h6 class="text-blueGray-400 text-sm mt-3 mb-6 font-bold uppercase">
          Contact Information
        </h6>
        <div class="flex flex-wrap">
          <div class="w-full lg:w-4/12 px-4">
            <div class="relative w-full mb-3">
             <%= f.label :address,class:"block uppercase text-blueGray-600 text-xs font-bold mb-2" %>
               <%= f.text_field :address,class:"border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" %>
            </div>
          </div>
          <div class="w-full lg:w-4/12 px-4">
            <div class="relative w-full mb-3">
             <%= f.label :city,class:"block uppercase text-blueGray-600 text-xs font-bold mb-2" %>
               <%= f.text_field :city,class:"border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" %>
            </div>
          </div>
          <div class="w-full lg:w-4/12 px-4">
            <div class="relative w-full mb-3">
              <%= f.label :country,class:"block uppercase text-blueGray-600 text-xs font-bold mb-2" %>
               <%= f.text_field :country,class:"border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" %>
            </div>
          </div>

        </div>
      <div class="justify-center items-center">

          <%= f.submit "Sign up",class:"items-right bg-pink-500 text-white active:bg-pink-600 font-bold uppercase text-xs px-4 py-2 rounded shadow hover:shadow-md outline-none focus:outline-none mr-1 ease-linear transition-all duration-150" %>

      </div>

    </div>
  </div>
<% end %>
</div>
        <%= render "devise/shared/links" %>
</section>
